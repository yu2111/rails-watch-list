<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= asset_path("movie.jpg") %>');">
  <div class="container">
    <h1>My Lists</h1>
    <p class="text-light">List now, watch later!</p>
    <%= link_to new_list_path, class: "text-decoration-none btn btn-danger", style: "height: 45px" do %>
      <p class="text-light"><i class="fa-solid fa-plus"></i> add a list</p>
    <% end %>
  </div>
</div>
<div class="container my-5">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
        <%= link_to list.name, list_path(list), class: "text-white text-decoration-none" %>
      </div>
    <% end %>
  </div>
</div>
