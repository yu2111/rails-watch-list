<div class="container">
  <h1>Lists</h1>
  <%= link_to new_list_path, class: "text-decoration-none" do %>
    <p><i class="fa-solid fa-plus"></i> add a list</p>
  <% end %>
  <div class="cards">
    <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to list.name, list_path(list), class: "text-white text-decoration-none"%>
    </div>
    <% end %>
  </div>
</div>
